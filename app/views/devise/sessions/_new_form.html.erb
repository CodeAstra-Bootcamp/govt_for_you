<h2>Returning Applicant</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'remember_me_wrapper' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name), class: 'devise_link' %>